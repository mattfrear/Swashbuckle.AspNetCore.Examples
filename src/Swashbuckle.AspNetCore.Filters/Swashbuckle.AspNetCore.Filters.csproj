<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <PackageVersion>5.0.0-preview1</PackageVersion>
    <Authors>Matt Frear</Authors>
    <Description>Some additional useful filters for Swashbuckle.AspNetCore. This package replaces Swashbuckle.AspNetCore.Examples.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/mattfrear/Swashbuckle.AspNetCore.Filters</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/mattfrear/Swashbuckle.AspNetCore.Filters/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>2018</Copyright>
    <PackageTags>Swagger Swashbuckle</PackageTags>
    <PackageReleaseNotes>
      Add an optional true/false value to the AddHeaderOperationFilter to determine whether the header
      is required or not.
    </PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/mattfrear/Swashbuckle.AspNetCoreFilters.git</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>5.0.0-preview1</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
    <Version>5.0.0-preview1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="1.1.0" />
    <PackageReference Include="Scrutor" Version="3.0.1" />
    <PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="4.0.0-preview-0668" />
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="4.0.0-preview-0668" />
  </ItemGroup>  
</Project>
